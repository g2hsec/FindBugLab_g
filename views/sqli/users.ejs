<!-- views/sqli/users.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>유저 목록</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">👥 유저 목록</h2>

    <form method="POST" action="/sqli/users" class="row g-2 mb-4">
      <div class="col-md-3">
        <label class="form-label">정렬 기준</label>
        <select name="sort" class="form-select">
          <option value="id" <%= sort === 'id' ? 'selected' : '' %>>ID</option>
          <option value="username" <%= sort === 'username' ? 'selected' : '' %>>이름</option>
          <option value="email" <%= sort === 'email' ? 'selected' : '' %>>이메일</option>
          <option value="created_at" <%= sort === 'created_at' ? 'selected' : '' %>>가입일</option>
        </select>
      </div>
      <div class="col-md-3">
        <label class="form-label">정렬 순서</label>
        <select name="order" class="form-select">
          <option value="ASC" <%= order === 'ASC' ? 'selected' : '' %>>오름차순</option>
          <option value="DESC" <%= order === 'DESC' ? 'selected' : '' %>>내림차순</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">페이지</label>
        <input type="number" name="page" value="<%= page %>" class="form-control">
      </div>
      <div class="col-md-2 align-self-end">
        <button class="btn btn-primary w-100">조회</button>
      </div>
    </form>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>사용자명</th>
          <th>이메일</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>